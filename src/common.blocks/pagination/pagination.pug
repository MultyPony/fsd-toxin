mixin pagination
  .pagination
    ul.pagination__list.text.text_s
      li.pagination__item.pagination_active 1
      li.pagination__item
        a.pagination__link(href="#") 2
      li.pagination__item
        a.pagination__link(href="#") 3
      li.pagination__item ...
      li.pagination__item
        a.pagination__link(href="#") 15
      li.pagination__item
        button.pagination__arrow
    p.pagination__text.text 1 – 12 из 100+ вариантов аренды
